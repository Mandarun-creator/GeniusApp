# ==============================================================================
# Application Environment Settings
# ==============================================================================

# Application environment: development, production, staging, testing
APP_ENV=development

# Enable debug mode: true or false
APP_DEBUG=true

# Base URL of the application
APP_URL=http://localhost

# Application name (used in emails, titles, etc.)
APP_NAME="MyMiniFramework"

# ==============================================================================
# Database Configuration
# ==============================================================================

# Database driver: mysql, pgsql, sqlite, etc.
DATABASE_DRIVER=mysql

# Database server address
DATABASE_HOST=127.0.0.1

# Database server port
DATABASE_PORT=3306

# Database name
DATABASE_NAME=mini_framework

# Database username
DATABASE_USER=root

# Database password
DATABASE_PASSWORD=secret

# ==============================================================================
# Security & Encryption
# ==============================================================================

# Application encryption key (generate securely!)
APP_KEY=base64:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# JWT secret for API authentication
JWT_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# Email (SMTP) Configuration
# ==============================================================================

# Mail driver: smtp, sendmail, mailgun, etc.
MAIL_MAILER=smtp

# SMTP server address
MAIL_HOST=smtp.mailtrap.io

# SMTP server port
MAIL_PORT=2525

# SMTP username
MAIL_USERNAME=null

# SMTP password
MAIL_PASSWORD=null

# Encryption: tls, ssl, or null
MAIL_ENCRYPTION=null

# Default sender address
MAIL_FROM_ADDRESS="noreply@myframework.local"

# Default sender name
MAIL_FROM_NAME="MyMiniFramework"

# ==============================================================================
# External API Keys
# ==============================================================================

# Google Maps API key
API_KEY_GOOGLE_MAPS=

# SendGrid API key
API_KEY_SENDGRID=

# ==============================================================================
# Logging & Debugging
# ==============================================================================

# Logging channel: stack, single, daily, etc.
LOG_CHANNEL=stack

# Logging level: debug, info, warning, error, critical
LOG_LEVEL=debug

# ==============================================================================
# Cache & Session Settings
# ==============================================================================

# Cache driver: file, redis, memcached
CACHE_DRIVER=file

# Session driver: file, redis, database
SESSION_DRIVER=file

# Session lifetime in minutes
SESSION_LIFETIME=120

# ==============================================================================
# Localization & Timezone
# ==============================================================================

# Default application timezone
TIMEZONE=Europe/Paris

# Default application locale (language)
LOCALE=en

# ==============================================================================
# Custom Settings
# ==============================================================================

# Add any custom environment variables here
CUSTOM_SETTING=

# ==============================================================================
# End of .env file
# ==============================================================================

